<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilo para el Spash activity-->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/fondo_splash</item>
    </style>

    <!-- Estilo sin barra de acción y transición translucido -->
    <style name="SinBarraDeAccion" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Estilo para el error de un textview -->
    <style name="aparencia_error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error_color</item>
    </style>
    <color name="error_color">#FFFFFF</color>

</resources>
