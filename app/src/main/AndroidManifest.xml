<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mus.tec">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Activity para el splash -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/SinBarraDeAccion" />

        <!-- Actividad mantener scanner vertical -->
        <activity
            android:name=".ScannerVertical"
            android:screenOrientation="portrait" />

        <!-- Actividad para preguntar QR -->
        <activity
            android:name=".AlumnoQR"
            android:theme="@style/SinBarraDeAccion" />

        <!-- Actividad Inicio de Sesión profesor -->
        <activity
            android:name=".ProfesorLogIn"
            android:theme="@style/SinBarraDeAccion" />

        <!-- Actividad Principal Profesor -->
        <activity
            android:name=".MainActivityProfesor"
            android:theme="@style/SinBarraDeAccion" />

        <!-- Actividad del mapa añadiendo la huella digital para habilitar la API -->

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA6oenmXxnBIzGKgavwA00dV0mmfKHibGU" />

        <activity
            android:name=".MapaTec"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".ContenedorInfoLugar"/>
    </application>

</manifest>