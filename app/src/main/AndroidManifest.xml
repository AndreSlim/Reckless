<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mus.tec">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <!-- Activity para el splash -->
        <activity
            android:name="com.mus.tec.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Actividad principal -->
        <activity
            android:name="com.mus.tec.MainActivity"
            android:theme="@style/SinBarraDeAccion" />


        <!-- Actividad mantener scanner vertical -->
        <activity
            android:name="com.mus.tec.ScannerVertical"
            android:screenOrientation="portrait" />


        <!-- Actividad para preguntar QR -->
        <activity
            android:name="com.mus.tec.AlumnoQR"
            android:theme="@style/SinBarraDeAccion" />


        <!-- Actividad Inicio de SesiÃ³n profesor -->
        <activity android:name="com.mus.tec.ProfesorLogIn"
            android:theme="@style/SinBarraDeAccion"/>


    </application>

</manifest>